---
export interface Props {
  title: string;
  description?: string;
}

import business from '../data/business.json';
import { siteConfig } from '../../config/site.config.mjs';
const { social, layout, theme, seo } = siteConfig;

// Use fetched business data if available, otherwise fall back to config
const businessName = business?.name || siteConfig.business.name;
const businessTagline = business?.tagline || siteConfig.business.tagline;
const businessDescription = business?.description || siteConfig.business.description;

const { title, description = businessDescription } = Astro.props;
const pageTitle = title.includes(businessName) ? title : `${businessName} â€“ ${businessTagline}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content={seo.keywords.join(', ')} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={seo.ogImage} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={seo.ogImage} />
    <meta property="twitter:creator" content={seo.twitterHandle} />
    
    <link rel="icon" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <title>{pageTitle}</title>
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style is:global>
      :root {
        --body-font: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        --heading-font: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        --fade-in-animation: fadeIn 0.5s ease-in-out;
        --slide-up-animation: slideUp 0.6s ease-out;
      }
      
      html {
        font-family: var(--body-font);
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--heading-font);
      }
      
      /* Custom animations */
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      
      @keyframes slideUp {
        from { 
          opacity: 0;
          transform: translateY(20px);
        }
        to { 
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .animate-fadeIn {
        animation: var(--fade-in-animation);
      }
      
      .animate-slideUp {
        animation: var(--slide-up-animation);
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen bg-gray-50">
    <!-- Header / Nav -->
    <header class={`${layout.header.background} ${layout.header.shadow} ${layout.header.sticky ? 'sticky top-0 z-50' : ''}`}>
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-gray-900 hover:text-primary-600 transition-colors">
          {businessName}
        </a>
        
        <!-- Desktop Navigation -->
        <ul class="hidden md:flex gap-8 items-center">
          <li><a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Home</a></li>
          <li><a href="/services" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Services</a></li>
          <li><a href="/#contact" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Contact</a></li>
          <li>
            <button 
              onclick="window.openBookingModal && window.openBookingModal()"
              class="${siteConfig.components.buttons.primary}"
            >
              Book Now
            </button>
          </li>
        </ul>
        
        <!-- Mobile Menu Button -->
        <button 
          class="md:hidden text-gray-700 hover:text-primary-600 transition-colors"
          onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
        >
          <i class="fas fa-bars text-xl"></i>
        </button>
      </nav>
      
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden bg-white border-t border-gray-200 md:hidden">
        <div class="container mx-auto px-4 py-4">
          <ul class="flex flex-col gap-4">
            <li><a href="/" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors py-2">Home</a></li>
            <li><a href="/services" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors py-2">Services</a></li>
            <li><a href="/#contact" class="block text-gray-700 hover:text-primary-600 font-medium transition-colors py-2">Contact</a></li>
            <li class="pt-2">
              <button 
                onclick="window.openBookingModal && window.openBookingModal()"
                class="${siteConfig.components.buttons.primary} w-full"
              >
                Book Now
              </button>
            </li>
          </ul>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class={`${layout.footer.background} ${layout.footer.borderTop} ${layout.footer.padding}`}>
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Business Info -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">{businessName}</h3>
            <p class="text-gray-600 mb-4">{businessTagline}</p>
            {business?.address && (
              <div class="flex items-start mb-2">
                <i class="fas fa-map-marker-alt text-primary-600 mt-1 mr-3 w-4"></i>
                <p class="text-gray-600 text-sm">{business.address}</p>
              </div>
            )}
            {business?.phone && (
              <div class="flex items-center mb-2">
                <i class="fas fa-phone text-primary-600 mr-3 w-4"></i>
                <a href={`tel:${business.phone}`} class="text-gray-600 text-sm hover:text-primary-600 transition-colors">
                  {business.phone}
                </a>
              </div>
            )}
            {business?.email && (
              <div class="flex items-center">
                <i class="fas fa-envelope text-primary-600 mr-3 w-4"></i>
                <a href={`mailto:${business.email}`} class="text-gray-600 text-sm hover:text-primary-600 transition-colors">
                  {business.email}
                </a>
              </div>
            )}
          </div>
          
          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-600 hover:text-primary-600 transition-colors">Home</a></li>
              <li><a href="/services" class="text-gray-600 hover:text-primary-600 transition-colors">Services</a></li>
              <li><a href="/#contact" class="text-gray-600 hover:text-primary-600 transition-colors">Contact</a></li>
              <li>
                <button 
                  onclick="window.openBookingModal && window.openBookingModal()"
                  class="text-gray-600 hover:text-primary-600 transition-colors text-left w-full"
                >
                  Book Appointment
                </button>
              </li>
            </ul>
          </div>
          
          <!-- Social Links -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Follow Us</h3>
            {social.length > 0 && (
              <div class="flex gap-4">
                {social.map((link) => (
                  <a 
                    href={link.url} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    aria-label={link.name}
                    class={`${link.color} hover:opacity-80 transition-opacity`}
                  >
                    <i class={`fab ${link.icon} text-2xl`}></i>
                  </a>
                ))}
              </div>
            )}
          </div>
        </div>
        
        <!-- Copyright -->
        <div class="border-t border-gray-200 mt-8 pt-8 text-center">
          <p class="text-gray-600 text-sm">
            &copy; {new Date().getFullYear()} {businessName}. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

---
import Card from '../atomic/Card.astro';
import { siteConfig } from '../../../config/site.config.mjs';
const { features } = siteConfig.content;
---

<section class="features-section py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Why Choose Us
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Experience the difference with our premium beauty services and expert care
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature, index) => (
        <Card variant="default" class="text-center">
          <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-pink-600"></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature}</h3>
          <p class="text-gray-600 text-sm">Professional service with attention to detail</p>
        </Card>
      ))}
    </div>
  </div>
</section>

---
import { siteConfig } from "../../../config/site.config.mjs";
const { business, content, layout, theme } = siteConfig;
const { hero } = content;

// Define color configuration options
const colorConfigs = [
  {
    gradient: "from-primary-100/20 via-purple-50/20 to-secondary-100/20",
    blobs: ["bg-primary-200", "bg-secondary-200", "bg-purple-200"]
  },
  {
    gradient: "from-blue-100/20 via-cyan-50/20 to-teal-100/20",
    blobs: ["bg-blue-200", "bg-cyan-200", "bg-teal-200"]
  },
  {
    gradient: "from-rose-100/20 via-pink-50/20 to-red-100/20",
    blobs: ["bg-rose-200", "bg-pink-200", "bg-red-200"]
  },
  {
    gradient: "from-green-100/20 via-emerald-50/20 to-lime-100/20",
    blobs: ["bg-green-200", "bg-emerald-200", "bg-lime-200"]
  },
  {
    gradient: "from-orange-100/20 via-amber-50/20 to-yellow-100/20",
    blobs: ["bg-orange-200", "bg-amber-200", "bg-yellow-200"]
  },
  {
    gradient: "from-indigo-100/20 via-violet-50/20 to-purple-100/20",
    blobs: ["bg-indigo-200", "bg-violet-200", "bg-purple-200"]
  },
  {
    gradient: "from-slate-100/20 via-gray-50/20 to-zinc-100/20",
    blobs: ["bg-slate-200", "bg-gray-200", "bg-zinc-200"]
  },
  {
    gradient: "from-fuchsia-100/20 via-purple-50/20 to-pink-100/20",
    blobs: ["bg-fuchsia-200", "bg-purple-200", "bg-pink-200"]
  },
  {
    gradient: "from-sky-100/20 via-blue-50/20 to-indigo-100/20",
    blobs: ["bg-sky-200", "bg-blue-200", "bg-indigo-200"]
  },
  {
    gradient: "from-emerald-100/20 via-teal-50/20 to-cyan-100/20",
    blobs: ["bg-emerald-200", "bg-teal-200", "bg-cyan-200"]
  }
];

// Create a deterministic "random" selection based on build time
// This ensures the same selection throughout the build, but changes between builds
const buildSeed = import.meta.env.BUILD_TIMESTAMP || Date.now().toString();
const seedHash = buildSeed.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0);
const selectedConfig = colorConfigs[seedHash % colorConfigs.length];
---

<section class={`${layout.sections.padding} ${layout.sections.mobile?.padding || ''} ${hero.background} relative overflow-hidden`}>
  <!-- Background decoration -->
  <div class={`absolute inset-0 bg-gradient-to-br ${selectedConfig.gradient}`}></div>
  <div class="absolute top-0 left-0 w-full h-full">
    <div class={`absolute top-10 left-10 w-48 h-48 sm:w-72 sm:h-72 ${selectedConfig.blobs[0]} rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse`}></div>
    <div class={`absolute top-32 right-10 w-48 h-48 sm:w-72 sm:h-72 ${selectedConfig.blobs[1]} rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse`} style="animation-delay: 2s"></div>
    <div class={`absolute -bottom-8 left-32 w-48 h-48 sm:w-72 sm:h-72 ${selectedConfig.blobs[2]} rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse`} style="animation-delay: 4s"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center max-w-4xl mx-auto animate-slideUp">
      <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold ${hero.textColor} mb-6 leading-tight">
        {hero.headline}
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-700 mb-8 sm:mb-12 max-w-2xl mx-auto leading-relaxed">
        {hero.subheadline}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center">
        <button
          class="${siteConfig.components.buttons.primaryMobile} sm:${siteConfig.components.buttons.primary} text-lg sm:text-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300"
          onclick="window.openBookingModal && window.openBookingModal()"
        >
          <i class="fas fa-calendar-check mr-2"></i>
          {hero.cta}
        </button>
        <a href="#contact" class="${siteConfig.components.buttons.outline} text-lg sm:text-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300">
          <i class="fas fa-info-circle mr-2"></i>
          Learn More
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#features" class="text-primary-600 hover:text-primary-700 transition-colors">
      <i class="fas fa-chevron-down text-2xl"></i>
    </a>
  </div>
</section>

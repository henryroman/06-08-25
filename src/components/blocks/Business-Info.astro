---
import business from '../../data/business.json';
---
<section class="business-info py-16 bg-gray-50">
  <div class="container mx-auto px-4 grid md:grid-cols-2 gap-8">
    {/* Left column */}
    <div>
      <h2 class="text-4xl font-bold mb-4">{business.name}</h2>
      <p class="text-lg mb-4">{business.address}</p>
      {business.phone && (
        <p class="text-lg mb-2">
          Phone: <a href={`tel:${business.phone}`} class="underline">{business.phone}</a>
        </p>
      )}
      {business.email && (
        <p class="text-lg mb-2">
          Email: <a href={`mailto:${business.email}`} class="underline">{business.email}</a>
        </p>
      )}
      {business.website && (
        <p class="text-lg mb-2">
          Website: <a href={business.website} target="_blank" rel="noopener" class="underline">{business.website}</a>
        </p>
      )}
      {business.rating && (
        <p class="text-lg">Rating: {business.rating} / 5</p>
      )}
    </div>

    {/* Right column: Opening Hours */}
    <div class="text-left md:text-right md:pl-8 lg:pl-12 flex md:justify-end">
      <div>
        <h3 class="text-2xl font-semibold mb-2">Opening Hours</h3>
        <ul class="list-nonelist-none md:space-y-1 md:pl-4 lg:pl-6">
          {business.openingHours?.map((line) => (
            <li>{line}</li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

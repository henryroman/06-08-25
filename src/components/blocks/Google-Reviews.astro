---
import { siteConfig } from '../../../config/site.config.mjs';
import business from '../../data/business.json';
const { testimonials } = siteConfig.content;
const { layout } = siteConfig;
const reviews = (business.reviews || testimonials || []) as Array<{
  author: string;
  rating: number;
  text: string;
  relativeTime?: string;
  date?: string;
}>;

// Function to truncate text to consistent length
const truncateText = (text: string, maxLength: number = 120): string => {
  if (text.length <= maxLength) return text;
  const truncated = text.substring(0, maxLength);
  const lastSpace = truncated.lastIndexOf(' ');
  return lastSpace > 0 ? truncated.substring(0, lastSpace) + '...' : truncated + '...';
};
---

{reviews.length > 0 && (
  <section class={`${layout.sections.padding} relative overflow-hidden`}>
    <!-- Enhanced Background with multiple layers -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/40"></div>
    <div class="absolute inset-0 bg-gradient-to-tl from-emerald-50/20 via-transparent to-pink-50/20"></div>

    <!-- Floating background elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
      <div class="absolute -top-24 -left-24 w-96 h-96 bg-gradient-to-br from-blue-100/30 to-purple-100/30 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-gradient-to-tl from-emerald-100/30 to-cyan-100/30 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-gradient-to-r from-pink-100/20 to-orange-100/20 rounded-full blur-2xl"></div>
    </div>

    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='80' height='80' viewBox='0 0 80 80' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%236366f1' fill-opacity='0.8'%3E%3Cpath d='M0 0h80v80H0z'/%3E%3Cpath d='M20 20h40v40H20z' fill='%23ffffff'/%3E%3Cpath d='M30 30h20v20H30z' fill='%236366f1'/%3E%3C/g%3E%3C/svg%3E&quot;);"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <!-- Enhanced header section -->
      <div class="text-center mb-20 animate-slideUp">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl mb-6 shadow-lg">
          <i class="fas fa-quote-right text-white text-2xl"></i>
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-gray-900 via-blue-900 to-purple-900 bg-clip-text text-transparent mb-6 leading-tight">
          What Our Customers Say
        </h2>
        <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed font-medium">
          Don't just take our word for it - hear from our satisfied clients
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mt-8 rounded-full"></div>
      </div>

      <!-- Enhanced reviews grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {reviews.map((review, index) => (
          <div
            class="group relative"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Card with enhanced styling -->
            <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 border border-white/50 hover:border-blue-200/50 animate-slideUp group-hover:scale-105">
              <!-- Gradient accent border -->
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 via-purple-500/5 to-emerald-500/10 rounded-3xl -z-10"></div>

              <!-- Rating Stars with enhanced styling -->
              <div class="flex items-center justify-between mb-6">
                <div class="flex text-amber-400 text-xl">
                  {Array.from({ length: 5 }, (_, i) => (
                    <i class={`fas fa-star ${i < review.rating ? 'text-amber-400 drop-shadow-sm' : 'text-gray-300'} mr-1`}></i>
                  ))}
                </div>
                <div class="bg-gradient-to-r from-amber-400 to-orange-500 text-white text-sm font-bold px-3 py-1 rounded-full shadow-md">
                  {review.rating}/5
                </div>
              </div>

              <!-- Quote icon -->
              <div class="absolute top-4 right-4 w-8 h-8 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-full flex items-center justify-center">
                <i class="fas fa-quote-left text-blue-600 text-sm"></i>
              </div>

              <!-- Truncated Review Text with better typography -->
              <blockquote class="text-gray-800 leading-relaxed mb-8 text-lg font-medium min-h-[4rem] flex items-center">
                <span class="italic">"{truncateText(review.text, 120)}"</span>
              </blockquote>

              <!-- Enhanced Author Info -->
              <div class="flex items-center border-t border-gray-100 pt-6">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center mr-4 shadow-lg">
                  <i class="fas fa-user text-white text-lg"></i>
                </div>
                <div class="flex-1">
                  <cite class="font-bold text-gray-900 not-italic text-lg block">
                    {review.author}
                  </cite>
                  <div class="text-sm text-gray-600 font-medium bg-gray-50 px-2 py-1 rounded-full inline-block mt-1">
                    {review.relativeTime || review.date || 'Verified Customer'}
                  </div>
                </div>
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <i class="fas fa-check text-green-600 text-sm"></i>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Enhanced Rating Summary -->
      <div class="mt-20 text-center animate-slideUp" style="animation-delay: 0.4s">
        <div class="relative max-w-lg mx-auto">
          <!-- Glowing background -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-600 rounded-3xl blur-lg opacity-20"></div>

          <!-- Card content -->
          <div class="relative bg-white/95 backdrop-blur-sm rounded-3xl p-10 shadow-2xl border border-white/50">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-white to-purple-50/50 rounded-3xl"></div>

            <div class="relative z-10">
              <div class="flex items-center justify-center mb-6">
                <div class="flex text-amber-400 text-3xl mr-4">
                  {'â˜…'.repeat(5)}
                </div>
              </div>

              <h3 class="text-4xl font-bold bg-gradient-to-r from-gray-900 to-blue-900 bg-clip-text text-transparent mb-3">
                {business.rating || '4.8'} out of 5
              </h3>

              <p class="text-xl text-gray-700 font-medium">
                Based on <span class="font-bold text-blue-600">{reviews.length}+</span> customer reviews
              </p>

              <!-- Trust badges -->
              <div class="flex items-center justify-center gap-4 mt-6">
                <div class="bg-green-50 border border-green-200 rounded-full px-4 py-2 flex items-center">
                  <i class="fas fa-shield-check text-green-600 mr-2"></i>
                  <span class="text-green-800 font-semibold text-sm">Verified</span>
                </div>
                <div class="bg-blue-50 border border-blue-200 rounded-full px-4 py-2 flex items-center">
                  <i class="fas fa-thumbs-up text-blue-600 mr-2"></i>
                  <span class="text-blue-800 font-semibold text-sm">Trusted</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
)}

---
import { siteConfig } from '../../../config/site.config.mjs';
import business from '../../data/business.json';
const { testimonials } = siteConfig.content;
const { layout, buildTimeTheme } = siteConfig;
const reviews = (business.reviews || testimonials || []) as Array<{
  author: string;
  rating: number;
  text: string;
  relativeTime?: string;
  date?: string;
}>;

// Function to truncate text to consistent length
const truncateText = (text: string, maxLength: number = 120): string => {
  if (text.length <= maxLength) return text;
  const truncated = text.substring(0, maxLength);
  const lastSpace = truncated.lastIndexOf(' ');
  return lastSpace > 0 ? truncated.substring(0, lastSpace) + '...' : truncated + '...';
};

// Use build-time theme colors or fallbacks
const testimonialBg = buildTimeTheme?.testimonialBackground || 'bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/40';
const blob1Class = buildTimeTheme?.blobs?.blob1 || 'bg-blue-100';
const blob2Class = buildTimeTheme?.blobs?.blob2 || 'bg-emerald-100';
const blob3Class = buildTimeTheme?.blobs?.blob3 || 'bg-pink-100';
const iconSetClass = buildTimeTheme?.iconSet || 'fas';
---

{reviews.length > 0 && (
  <section class={`${layout.sections.padding} relative overflow-hidden`}>
    <!-- Enhanced Background with build-time theme colors -->
    <div class={`absolute inset-0 ${testimonialBg}`}></div>
    <div class="absolute inset-0 bg-gradient-to-tl from-emerald-50/20 via-transparent to-pink-50/20"></div>

    <!-- Floating background elements with theme colors -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
      <div class={`absolute -top-24 -left-24 w-96 h-96 ${blob1Class}/30 rounded-full blur-3xl`}></div>
      <div class={`absolute -bottom-24 -right-24 w-96 h-96 ${blob2Class}/30 rounded-full blur-3xl`}></div>
      <div class={`absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 ${blob3Class}/20 rounded-full blur-2xl`}></div>
    </div>

    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='80' height='80' viewBox='0 0 80 80' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%236366f1' fill-opacity='0.8'%3E%3Cpath d='M0 0h80v80H0z'/%3E%3Cpath d='M20 20h40v40H20z' fill='%23ffffff'/%3E%3Cpath d='M30 30h20v20H30z' fill='%236366f1'/%3E%3C/g%3E%3C/svg%3E&quot;);"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <!-- Enhanced header section with theme-aware icons -->
      <div class="text-center mb-20 animate-slideUp">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-600 rounded-2xl mb-6">
          <i class={`${iconSetClass} fa-quote-right text-white text-2xl`}></i>
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-gray-900 via-primary-900 to-secondary-900 bg-clip-text text-transparent mb-6 leading-tight">
          What Our Customers Say
        </h2>
        <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed font-medium">
          Don't just take our word for it - hear from our satisfied clients
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto mt-8 rounded-full"></div>
      </div>

      <!-- Enhanced reviews grid with theme consistency -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {reviews.map((review, index) => (
          <div
            class="group relative"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Card with reduced shadows and theme colors -->
            <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-md hover:shadow-lg transition-all duration-500 border border-white/50 hover:border-primary-200/50 animate-slideUp group-hover:scale-105">
              <!-- Gradient accent border with theme colors -->
              <div class="absolute inset-0 bg-gradient-to-br from-primary-500/10 via-secondary-500/5 to-primary-500/10 rounded-3xl -z-10"></div>

              <!-- Rating Stars with enhanced styling -->
              <div class="flex items-center justify-between mb-6">
                <div class="flex text-amber-400 text-xl">
                  {Array.from({ length: 5 }, (_, i) => (
                    <i class={`${iconSetClass} fa-star ${i < review.rating ? 'text-amber-400' : 'text-gray-300'} mr-1`}></i>
                  ))}
                </div>
                <div class="bg-gradient-to-r from-amber-400 to-orange-500 text-white text-sm font-bold px-3 py-1 rounded-full">
                  {review.rating}/5
                </div>
              </div>

              <!-- Quote icon with theme color -->
              <div class="absolute top-4 right-4 w-8 h-8 bg-gradient-to-br from-primary-500/20 to-secondary-500/20 rounded-full flex items-center justify-center">
                <i class={`${iconSetClass} fa-quote-left text-primary-600 text-sm`}></i>
              </div>

              <!-- Truncated Review Text with better typography -->
              <blockquote class="text-gray-800 leading-relaxed mb-8 text-lg font-medium min-h-[4rem] flex items-center">
                <span class="italic">"{truncateText(review.text, 120)}"</span>
              </blockquote>

              <!-- Enhanced Author Info with theme colors -->
              <div class="flex items-center border-t border-gray-100 pt-6">
                <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-600 rounded-2xl flex items-center justify-center mr-4">
                  <i class={`${iconSetClass} fa-user text-white text-lg`}></i>
                </div>
                <div class="flex-1">
                  <cite class="font-bold text-gray-900 not-italic text-lg block">
                    {review.author}
                  </cite>
                  <div class="text-sm text-gray-600 font-medium bg-gray-50 px-2 py-1 rounded-full inline-block mt-1">
                    {review.relativeTime || review.date || 'Verified Customer'}
                  </div>
                </div>
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <i class={`${iconSetClass} fa-check text-green-600 text-sm`}></i>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Rating Summary - Kept exactly as original -->
      <div class="mt-16 text-center animate-slideUp" style="animation-delay: 0.4s">
        <div class="${siteConfig.components.cards.featured} max-w-md mx-auto p-8">
          <div class="flex items-center justify-center mb-4">
            <div class="flex text-yellow-400 text-2xl mr-3">
              {'â˜…'.repeat(5)}
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">
            {business.rating || '4.8'} out of 5
          </h3>
          <p class="text-gray-600">
            Based on {reviews.length}+ customer reviews
          </p>
        </div>
      </div>
    </div>
  </section>
)}

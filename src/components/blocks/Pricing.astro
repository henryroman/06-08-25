---
import { siteConfig } from '../../../config/site.config.mjs';
const { layout } = siteConfig;
---

<section class="${layout.sections.padding} bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23a855f7' fill-opacity='0.3'%3E%3Cpath d='M20 20c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10zm10 0c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10z'/%3E%3C/g%3E%3C/svg%3E&quot;);"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-16 animate-slideUp">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Our Services
      </h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Professional beauty treatments at competitive prices with exceptional service
      </p>
    </div>

    <div id="services-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <!-- Services will be loaded dynamically here -->
      <div class="text-center py-12 col-span-full">
        <i class="fas fa-spinner fa-spin text-4xl text-primary-600 mb-4"></i>
        <p class="text-gray-600">Loading services...</p>
      </div>
    </div>
    
    <!-- Additional CTA -->
    <div class="text-center mt-16 animate-slideUp" style="animation-delay: 0.6s">
      <div class="${siteConfig.components.cards.default} max-w-2xl mx-auto p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Have Questions About Our Services?
        </h3>
        <p class="text-gray-600 mb-6 leading-relaxed">
          Our friendly staff is here to help you choose the perfect treatment for your needs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#contact" class="${siteConfig.components.buttons.primary}">
            <i class="fas fa-phone mr-2"></i>
            Call Us
          </a>
          <button
            onclick="window.openBookingModal && window.openBookingModal()"
            class="${siteConfig.components.buttons.outline}"
          >
            <i class="fas fa-calendar mr-2"></i>
            Book Consultation
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Load services dynamically
  async function loadServices() {
    const servicesGrid = document.getElementById('services-grid');
    if (!servicesGrid) return;

    try {
      console.log('Loading services from API...');
      const response = await fetch('/api/services');
      const data = await response.json();
      console.log('Services API response:', data);
      
      let services = [];
      if (data.success && data.services && Array.isArray(data.services)) {
        services = data.services;
        console.log('Services loaded from API:', services.length);
      } else {
        console.log('API failed, using fallback services');
        // Fallback to config services
        services = [
          { name: "Manicure", duration: 45, price: "$45", description: "Classic manicure with nail polish" },
          { name: "Pedicure", duration: 60, price: "$55", description: "Relaxing pedicure with foot massage" },
          { name: "Facial Treatment", duration: 90, price: "$85", description: "Deep cleansing facial treatment" },
          { name: "Gel Nails", duration: 75, price: "$65", description: "Long-lasting gel nail application" },
          { name: "Acrylic Nails", duration: 90, price: "$75", description: "Custom acrylic nail extensions" },
          { name: "Nail Art", duration: 60, price: "$40+", description: "Custom nail art and designs" }
        ];
      }

      console.log('Rendering services:', services);

      // Render services
      servicesGrid.innerHTML = services.map((service, index) => `
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 p-8 border border-primary-100 group hover:transform hover:scale-105 animate-slideUp" 
             style="animation-delay: ${index * 0.1}s">
          <div class="text-center">
            <!-- Service Icon -->
            <div class="w-20 h-20 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:shadow-lg transition-all duration-300">
              <i class="fas fa-spa text-3xl text-primary-600"></i>
            </div>
            
            <!-- Service Name -->
            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
              ${service.name}
            </h3>
            
            <!-- Service Description -->
            <p class="text-gray-600 mb-6 leading-relaxed">
              ${service.description || 'Professional beauty service'}
            </p>
            
            <!-- Duration -->
            <div class="flex items-center justify-center mb-4">
              <i class="fas fa-clock text-primary-600 mr-2"></i>
              <span class="text-gray-700 font-medium">${service.duration} minutes</span>
            </div>
            
            <!-- Price -->
            <div class="mb-6">
              <span class="text-4xl font-bold text-primary-600">
                ${service.price}
              </span>
            </div>
            
            <!-- Book Button -->
            <button
              onclick="window.openBookingModal && window.openBookingModal()"
              class="bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl w-full group-hover:shadow-lg transition-all duration-300"
            >
              <i class="fas fa-calendar-check mr-2"></i>
              Book Now
            </button>
          </div>
        </div>
      `).join('');

      console.log('Services rendered successfully');

    } catch (error) {
      console.error('Error loading services:', error);
      // Show fallback services directly instead of error message
      servicesGrid.innerHTML = [
        { name: "Manicure", duration: 45, price: "$45", description: "Classic manicure with nail polish" },
        { name: "Pedicure", duration: 60, price: "$55", description: "Relaxing pedicure with foot massage" },
        { name: "Facial Treatment", duration: 90, price: "$85", description: "Deep cleansing facial treatment" }
      ].map((service, index) => `
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 p-8 border border-primary-100 group hover:transform hover:scale-105 animate-slideUp" 
             style="animation-delay: ${index * 0.1}s">
          <div class="text-center">
            <!-- Service Icon -->
            <div class="w-20 h-20 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:shadow-lg transition-all duration-300">
              <i class="fas fa-spa text-3xl text-primary-600"></i>
            </div>
            
            <!-- Service Name -->
            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
              ${service.name}
            </h3>
            
            <!-- Service Description -->
            <p class="text-gray-600 mb-6 leading-relaxed">
              ${service.description || 'Professional beauty service'}
            </p>
            
            <!-- Duration -->
            <div class="flex items-center justify-center mb-4">
              <i class="fas fa-clock text-primary-600 mr-2"></i>
              <span class="text-gray-700 font-medium">${service.duration} minutes</span>
            </div>
            
            <!-- Price -->
            <div class="mb-6">
              <span class="text-4xl font-bold text-primary-600">
                ${service.price}
              </span>
            </div>
            
            <!-- Book Button -->
            <button
              onclick="window.openBookingModal && window.openBookingModal()"
              class="bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl w-full group-hover:shadow-lg transition-all duration-300"
            >
              <i class="fas fa-calendar-check mr-2"></i>
              Book Now
            </button>
          </div>
        </div>
      `).join('');
    }
  }

  // Load services when page loads
  document.addEventListener('DOMContentLoaded', loadServices);
</script>
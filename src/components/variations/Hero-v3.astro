---
import Button from '../atomic/Button.astro';
import { siteConfig } from '../../../config/site.config.mjs';

const { hero } = siteConfig.content;
---

<section class="hero-v3 relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-pink-600 via-purple-600 to-pink-800"></div>
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>
  
  <!-- Decorative shapes -->
  <div class="absolute top-10 left-10 w-32 h-32 bg-white bg-opacity-10 rounded-full"></div>
  <div class="absolute bottom-20 right-20 w-48 h-48 bg-white bg-opacity-5 rounded-full"></div>
  <div class="absolute top-1/3 right-10 w-24 h-24 bg-white bg-opacity-10 rounded-full"></div>
  
  <!-- Content -->
  <div class="relative z-10 text-center max-w-4xl mx-auto px-4">
    <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
      {hero.headline}
    </h1>
    <p class="text-xl md:text-2xl text-gray-100 mb-8 leading-relaxed max-w-2xl mx-auto">
      {hero.subheadline}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button variant="primary" size="lg" class="bg-white text-pink-600 hover:bg-gray-100" onclick="openBookingModal()">
        {hero.cta}
      </Button>
      <Button variant="outline" size="lg" class="border-white text-white hover:bg-white hover:text-pink-600">
        Learn More
      </Button>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white animate-bounce">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

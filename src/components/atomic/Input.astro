---
export interface Props {
  type?: 'text' | 'email' | 'tel' | 'password' | 'date' | 'time';
  placeholder?: string;
  required?: boolean;
  name?: string;
  id?: string;
  value?: string;
  class?: string;
}

const {
  type = 'text',
  placeholder,
  required = false,
  name,
  id,
  value,
  class: className = '',
  ...rest
} = Astro.props;

const baseClasses = 'w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition-colors duration-200';
const inputClasses = `${baseClasses} ${className}`;
---

<input
  type={type}
  placeholder={placeholder}
  required={required}
  name={name}
  id={id}
  value={value}
  class={inputClasses}
  {...rest}
/>

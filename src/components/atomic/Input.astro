---
import { siteConfig } from "../../../config/site.config.mjs";
const { components } = siteConfig;

export interface Props {
  type?: 'text' | 'email' | 'tel' | 'password' | 'date' | 'time';
  placeholder?: string;
  required?: boolean;
  name?: string;
  id?: string;
  value?: string;
  class?: string;
  mobile?: boolean;
  focused?: boolean;
}

const {
  type = 'text',
  placeholder,
  required = false,
  name,
  id,
  value,
  class: className = '',
  mobile = false,
  focused = false,
  ...rest
} = Astro.props;

const inputClasses = focused
  ? components.inputs.focused
  : mobile
    ? components.inputs.defaultMobile
    : components.inputs.default;
---

<input
  type={type}
  placeholder={placeholder}
  required={required}
  name={name}
  id={id}
  value={value}
  class={inputClasses}
  {...rest}
/>

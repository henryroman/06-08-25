---
import { siteConfig } from "../../../config/site.config.mjs";
const { theme, components } = siteConfig;

export interface Props {
  variant?: "primary" | "secondary" | "outline" | "ghost";
  size?: "sm" | "md" | "lg";
  disabled?: boolean;
  type?: "button" | "submit" | "reset";
  class?: string;
  onclick?: string;
  mobile?: boolean;
}

const {
  variant = "primary",
  size = "md",
  disabled = false,
  type = "button",
  class: className = "",
  onclick,
  mobile = false,
  ...rest
} = Astro.props;

const baseClasses = "inline-flex items-center justify-center font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2";

const variantClasses = {
  primary: mobile ? components.buttons.primaryMobile : components.buttons.primary,
  secondary: components.buttons.secondary,
  outline: components.buttons.outline,
  ghost: components.buttons.ghost
};

const sizeClasses = {
  sm: "px-3 py-2 text-sm",
  md: "px-4 py-2 text-base",
  lg: "px-6 py-3 text-lg"
};

const disabledClasses = disabled ? "opacity-50 cursor-not-allowed" : "";

const buttonClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${disabledClasses} ${className}`;
---

<button
  type={type}
  disabled={disabled}
  class={buttonClasses}
  onclick={onclick}
  {...rest}
>
  <slot />
</button>

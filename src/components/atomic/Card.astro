---
import { siteConfig } from "../../../config/site.config.mjs";
const { components } = siteConfig;

export interface Props {
  title?: string;
  variant?: 'default' | 'featured' | 'minimal';
  class?: string;
  mobile?: boolean;
}

const {
  title,
  variant = 'default',
  class: className = '',
  mobile = false
} = Astro.props;

const baseClasses = 'transition-all duration-200';

const variantClasses = {
  default: mobile ? components.cards.defaultMobile : components.cards.default,
  featured: mobile ? components.cards.featuredMobile : components.cards.featured,
  minimal: mobile ? components.cards.minimalMobile : components.cards.minimal
};

const cardClasses = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

<div class={cardClasses}>
  {title && (
    <h3 class="text-lg font-semibold text-gray-900 mb-3">{title}</h3>
  )}
  <slot />
</div>
